@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 id="regHead" class="main-color-bg text-white font-weight-bold text-center w-30">Register</h1>
<form method="post" asp-action="/Identity/Account/Register" class="w-30">
    <div class="form-group mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.Username" class="text-primary h5">Username</label>
        </div>
        <input type="text"
               class="form-control text-primary text-center"
               id="username"
               placeholder="Username..."
               asp-for="Input.Username">
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.Password" class="text-primary h5">Password</label>
        </div>
        <input type="password"
               class="form-control text-primary text-center"
               id="password"
               placeholder="Password..."
               asp-for="Input.Password">
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.ConfirmPassword" class="text-primary h5">Confirm Password</label>
        </div>
        <input type="password"
               class="form-control text-primary text-center"
               id="confirmPassword"
               placeholder="Confirm Password..."
               asp-for="Input.ConfirmPassword">
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.Email" class="text-primary h5">Email</label>
        </div>
        <input type="email"
               class="form-control text-primary text-center"
               id="email"
               placeholder="Email..."
               asp-for="Input.Email">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <hr class="hr-2 bg-primary mt-4">
    <div class="d-flex justify-content-center mt-3">
        <button class="btn main-color-bg font-weight-bold center-block">Register</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}