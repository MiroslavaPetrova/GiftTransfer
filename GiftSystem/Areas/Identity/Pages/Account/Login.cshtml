@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 id="regHead" class="main-color-bg text-white font-weight-bold text-center w-30 mx-auto">Login</h1>
<form method="post" id="account" class="form border-primary-4 rounded p-3 w-30 mx-auto mt-3">
    <div class="form-group mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.Email" class="text-primary h5">Email</label>
        </div>
        <input type="text"
               class="form-control text-primary text-center"
               id="email"
               placeholder="Email..."
               asp-for="Input.Email">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.Password" class="text-primary h5">Password</label>
        </div>
        <input type="password"
               class="form-control text-primary text-center"
               id="password"
               placeholder="Password..."
               asp-for="Input.Password">
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <hr class="hr-2 bg-primary mt-4">
    <div class="d-flex justify-content-center mt-3">
        <button type="submit" class="btn main-color-bg font-weight-bold center-block">Login</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}